{
    "extends": "eslint:recommended",
    "ecmaFeatures": {
        "jsx": true,
        "modules": true
    },
    "env": {
        "browser": true,
        "node": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "rules": {
        "semi": ["error", "always"],
        "indent": ["error", 4, { "SwitchCase" : 1}],
        "quotes": [2, "single"],
        "strict": [2, "never"],
        "no-trailing-spaces": 0
    }
}
